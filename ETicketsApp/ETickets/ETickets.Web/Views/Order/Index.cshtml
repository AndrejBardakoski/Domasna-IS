@using Microsoft.Extensions.Options
@model List<ETickets.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th colspan="3" scope="col">Order Id</th>
                    <th scope="col"></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No Orders made</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var order = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td colspan="3">@order.Id</td>
                            <td><a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>